<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="Theme.Xemio"
      parent="Base.Theme.Xemio">
  </style>

  <style name="Theme.Xemio.Init"
      parent="Base.Theme.Xemio">
    <item name="android:windowBackground">@color/ColorPrimary</item>
  </style>

  <style name="dashboard"
      parent="Base.Theme.Xemio">
    <item name="android:numColumns">2</item>
  </style>

  <!-- Base application theme. -->
  <style name="Base.Theme.Xemio"
      parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/ColorPrimary</item>
    <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
    <item name="colorAccent">@color/ColorPrimaryDark</item>
    <item name="android:windowBackground">@color/window_background</item>
    <item name="colorControlHighlight">@color/ColorPrimaryLight</item>
    <item name="colorButtonNormal">@color/ColorPrimaryDark</item>
  </style>

  <style name="Widget.CardContent"
      parent="android:Widget">
    <item name="android:paddingLeft">16dp</item>
    <item name="android:paddingRight">16dp</item>
    <item name="android:paddingTop">24dp</item>
    <item name="android:paddingBottom">24dp</item>
    <item name="android:orientation">vertical</item>
  </style>

  <style name="CircularProgress" parent="Theme.AppCompat.Light">
    <item name="colorAccent">@color/ColorPrimaryDark</item>
  </style>

  <style name="MyEditText" parent="Theme.AppCompat.Light">
    <item name="colorControlNormal">@color/ColorPrimaryDark</item>
    <item name="colorControlActivated">@color/ColorPrimary</item>
  </style>

  <style name="FullWidthEditText" parent="Widget.AppCompat.EditText">
    <item name="colorControlNormal">@color/ColorPrimaryDark</item>
    <item name="colorControlActivated">@color/ColorPrimary</item>
    <item name="android:padding">20dp</item>
    <item name="android:background">@null</item>
    <item name="android:textSize">@dimen/text_size_subhead_material</item>
  </style>

  <style name="InfoBasicsButton">
    <item name="android:minHeight">82dp</item>
    <item name="android:textColor">@color/color_white</item>
    <item name="android:textSize">20sp</item>
  </style>

  <style name="InfoBasicsButtonLight">
    <item name="android:minHeight">82dp</item>
    <item name="android:textColor">@color/color_white</item>
    <item name="android:textSize">20sp</item>
    <item name="colorControlHighlight">@color/ColorPrimary</item>
    <item name="colorButtonNormal">@color/ColorPrimaryLight</item>
  </style>

  <style name="ToolbarTextAppearance">
    <item name="android:textColor">@android:color/white</item>
    <item name="android:shadowDx">1</item>
    <item name="android:shadowDy">1</item>
    <item name="android:shadowRadius">2</item>
    <item name="android:shadowColor">?colorAccent</item>
  </style>

  <style name="ToolbarTextAppearance.Title">
    <item name="android:textSize">20sp</item>
  </style>

  <style name="MyToolbar">
    <item name="theme">@style/ThemeOverlay.AppCompat.Dark</item>
    <item name="android:background">?colorPrimary</item>
    <item name="navigationIcon">@drawable/ic_arrow_back_white_24dp</item>
  </style>

  <style name="MyToolbarHome">
    <item name="theme">@style/ThemeOverlay.AppCompat.Dark</item>
    <item name="colorControlNormal">@color/color_white</item>
    <item name="android:background">?colorPrimary</item>
  </style>

</resources>
