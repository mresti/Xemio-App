<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <android.support.design.widget.AppBarLayout
      android:id="@+id/appbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
      >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_scrollFlags="scroll|enterAlways"
        />

  </android.support.design.widget.AppBarLayout>

  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:orientation="vertical"
      android:background="@color/color_white"
      android:paddingTop="60dp"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="@dimen/card_margin"
        android:gravity="center_horizontal"
        >

      <Button
          android:id="@+id/btn_info_cancer"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/btn_info_cancer"
          android:layout_marginBottom="@dimen/card_margin"
          android:layout_marginLeft="@dimen/card_margin"
          android:layout_marginRight="@dimen/card_margin"
          android:layout_marginStart="@dimen/card_margin"
          android:layout_marginEnd="@dimen/card_margin"
          android:drawableTop="@drawable/ic_info_black_48dp"
          style="?android:attr/borderlessButtonStyle"
          android:textColor="@color/ColorPrimaryDark"
          />

      <Button
          android:id="@+id/btn_info_trata"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/btn_info_trata"
          android:layout_marginBottom="@dimen/card_margin"
          android:layout_marginLeft="@dimen/card_margin"
          android:layout_marginRight="@dimen/card_margin"
          android:layout_marginStart="@dimen/card_margin"
          android:layout_marginEnd="@dimen/card_margin"
          android:drawableTop="@drawable/ic_assignment_black_48dp"
          style="?android:attr/borderlessButtonStyle"
          android:textColor="@color/ColorPrimaryDark"
          />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_margin="@dimen/card_margin"
        >

      <Button
          android:id="@+id/btn_inci"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/btn_incidences"
          android:layout_marginBottom="@dimen/card_margin"
          android:layout_marginLeft="@dimen/card_margin"
          android:layout_marginRight="@dimen/card_margin"
          android:layout_marginStart="@dimen/card_margin"
          android:layout_marginEnd="@dimen/card_margin"
          android:drawableTop="@drawable/ic_add_circle_black_48dp"
          style="?android:attr/borderlessButtonStyle"
          android:textColor="@color/ColorPrimaryDark"
          />

      <Button
          android:id="@+id/btn_history"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/btn_history"
          android:layout_marginBottom="@dimen/card_margin"
          android:layout_marginLeft="@dimen/card_margin"
          android:layout_marginRight="@dimen/card_margin"
          android:layout_marginStart="@dimen/card_margin"
          android:layout_marginEnd="@dimen/card_margin"
          android:drawableTop="@drawable/ic_event_note_black_48dp"
          style="?android:attr/borderlessButtonStyle"
          android:textColor="@color/ColorPrimaryDark"
          />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="@dimen/card_margin"
        android:gravity="center_horizontal"
        >

      <Button
          android:id="@+id/btn_info_home"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/btn_my_home"
          android:layout_marginBottom="@dimen/card_margin"
          android:layout_marginLeft="@dimen/card_margin"
          android:layout_marginRight="@dimen/card_margin"
          android:layout_marginStart="@dimen/card_margin"
          android:layout_marginEnd="@dimen/card_margin"
          android:drawableTop="@drawable/ic_settings_black_48dp"
          style="?android:attr/borderlessButtonStyle"
          android:textColor="@color/ColorPrimaryDark"
          />

      <Button
          android:id="@+id/btn_web"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/btn_web"
          android:layout_marginBottom="@dimen/card_margin"
          android:layout_marginLeft="@dimen/card_margin"
          android:layout_marginRight="@dimen/card_margin"
          android:layout_marginStart="@dimen/card_margin"
          android:layout_marginEnd="@dimen/card_margin"
          android:drawableTop="@drawable/ic_public_black_48dp"
          style="?android:attr/borderlessButtonStyle"
          android:textColor="@color/ColorPrimaryDark"
          />

    </LinearLayout>
  </LinearLayout>
</android.support.design.widget.CoordinatorLayout>