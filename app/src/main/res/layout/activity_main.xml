<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorPrimary"
    tools:context=".MainActivity"
    >

  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_marginBottom="20dp"
      android:layout_marginTop="20dp"
      android:src="@drawable/xemio_icon_blanco"
      android:contentDescription="@string/string_content_description"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:paddingTop="140dp"
      android:paddingBottom="64dp"
      >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clipToPadding="false"

        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_margin"
            android:layout_marginLeft="@dimen/card_margin"
            android:layout_marginRight="@dimen/card_margin"
            android:layout_gravity="center_horizontal"
            >

          <LinearLayout
              style="@style/Widget.CardContent"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:text="@string/str_info_title"
                android:textColor="@color/ColorPrimaryDark"
                android:layout_marginBottom="@dimen/card_margin"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_marginRight="@dimen/card_margin"
                >
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:text="@string/str_info_init"
                android:layout_marginBottom="@dimen/card_margin"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_marginRight="@dimen/card_margin"
                >
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:text="@string/str_info_init2"
                android:layout_marginBottom="@dimen/card_margin"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_marginRight="@dimen/card_margin"
                >
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:text="@string/str_info_init3"
                android:layout_marginBottom="@dimen/card_margin"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_marginRight="@dimen/card_margin"
                >
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:text="@string/str_info_init2"
                android:layout_marginBottom="@dimen/card_margin"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_marginRight="@dimen/card_margin"
                >
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:text="@string/str_info_init3"
                android:layout_marginBottom="@dimen/card_margin"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_marginRight="@dimen/card_margin"
                >
            </TextView>

          </LinearLayout>
        </android.support.v7.widget.CardView>
      </LinearLayout>
    </ScrollView>
  </LinearLayout>

  <LinearLayout
      android:background="#00000000"
      android:layout_width="match_parent"
      android:layout_height="64dp"
      android:gravity="bottom"
      android:layout_gravity="bottom"
      android:orientation="vertical"
      android:weightSum="1"
      >
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/ColorDivider"
        >
    </TextView>
    <LinearLayout
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="1"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
      <Button
          android:id="@+id/btn_deny"
          android:layout_width="wrap_content"
          android:layout_height="fill_parent"
          android:text="@string/btn_deny"
          android:layout_gravity="start"
          style="?android:attr/borderlessButtonStyle"
          android:layout_weight="0.2"
          />

      <FrameLayout
          android:layout_width="wrap_content"
          android:layout_height="fill_parent"
          android:layout_weight="0.6"
          android:layout_gravity="center"
          />

      <Button
          android:id="@+id/btn_begin"
          android:layout_width="wrap_content"
          android:layout_height="fill_parent"
          android:text="@string/btn_begin"
          android:textColor="@color/ColorPrimaryDark"
          android:layout_gravity="start"
          android:layout_weight="0.2"
          style="?android:attr/borderlessButtonStyle"
          />
    </LinearLayout>
  </LinearLayout>
</FrameLayout>
