<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorPrimary"
    tools:context=".MainActivity"
    >

  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_marginBottom="20dp"
      android:layout_marginTop="20dp"
      android:src="@drawable/logo_xemio"
      android:contentDescription="@string/string_content_description"
      />

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_weight="0.7"
      android:clipToPadding="false"
      android:paddingTop="130dp"
      android:paddingBottom="54dp"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

      <android.support.v7.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/card_margin"
          android:layout_gravity="center_horizontal"
          >

        <LinearLayout
            style="@style/Widget.CardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textAppearance="@style/TextAppearance.AppCompat.Title"
              android:text="@string/str_verigy_title_logup"
              android:textColor="@color/ColorAccent"
              android:layout_marginBottom="@dimen/card_margin"
              android:layout_marginLeft="@dimen/card_margin"
              android:layout_marginRight="@dimen/card_margin"
              >
          </TextView>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textAppearance="@style/TextAppearance.AppCompat.Body2"
              android:text="@string/str_verify_logup"
              android:layout_marginBottom="@dimen/card_margin"
              android:layout_marginLeft="@dimen/card_margin"
              android:layout_marginRight="@dimen/card_margin"
              >
          </TextView>

          <View
              android:layout_width="fill_parent"
              android:layout_height="1dp"
              android:layout_marginTop="50dp"
              android:layout_marginBottom="20dp"
              android:background="@android:color/darker_gray"
              />

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textAppearance="@style/TextAppearance.AppCompat.Body2"
              android:text="@string/str_reply_email"
              android:layout_marginBottom="@dimen/card_margin"
              android:layout_marginLeft="@dimen/card_margin"
              android:layout_marginRight="@dimen/card_margin"
              >
          </TextView>

          <Button
              android:id="@+id/btn_retry"
              android:layout_gravity="center"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/btn_retry_email"
              />

        </LinearLayout>
      </android.support.v7.widget.CardView>
    </LinearLayout>
  </ScrollView>

  <LinearLayout
      android:background="#00000000"
      android:layout_width="match_parent"
      android:layout_height="64dp"
      android:gravity="bottom"
      android:layout_gravity="bottom"
      android:orientation="vertical"
      >
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/ColorDivider"
        >
    </TextView>
    <LinearLayout
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
      <Button
          android:id="@+id/btn_deny"
          android:visibility="invisible"
          android:layout_width="wrap_content"
          android:layout_height="fill_parent"
          android:text="@string/btn_back"
          android:layout_gravity="start"
          style="?android:attr/borderlessButtonStyle"
          android:layout_weight="0.2"
          />

      <FrameLayout
          android:layout_width="wrap_content"
          android:layout_height="fill_parent"
          android:layout_weight="0.6"
          android:layout_gravity="center"
          />

      <Button
          android:id="@+id/btn_verify"
          android:layout_width="wrap_content"
          android:layout_height="fill_parent"
          android:text="@string/btn_check"
          android:layout_gravity="start"
          android:layout_weight="0.2"
          style="?android:attr/borderlessButtonStyle"
          android:textColor="@color/ColorAccent"
          />
    </LinearLayout>
  </LinearLayout>
</FrameLayout>